<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity"
    android:padding="15dp">


    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_circle"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/card1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/weather_sunny_big"
            android:layout_marginTop="15dp"
            android:drawablePadding="50dp">
        </TextView>

        <TextView
            android:id="@+id/card1_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="71â„‰"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:layout_toRightOf="@id/card1_tv1">
        </TextView>

        <TextView
            android:id="@+id/card1_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1_tv2"
            android:layout_toRightOf="@id/card1_tv1"
            android:text="Clear"
            android:textColor="#777777"
            android:textSize="20sp"
            android:paddingBottom="15dp">
        </TextView>

        <TextView
            android:id="@+id/card1_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1_tv1"
            android:text="Los Angeles, CA, US"
            android:drawableRight="@drawable/information_outline"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_circle"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/card2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42%"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:drawableTop="@drawable/water_percent"
                android:padding="10dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.87 mph"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:drawableTop="@drawable/weather_windy"
                android:padding="10dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.31 km"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:drawableTop="@drawable/eye_outline"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1001.62 mb"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:drawableTop="@drawable/gauge"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/card2_1">
            <TextView
                android:id="@+id/card2_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="18sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind Speed"
                android:textSize="18sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visiblity"
                android:textSize="18sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id="@+id/card2_tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textSize="18sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_circle">

        <ListView
            android:id="@+id/card3_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#333333"
            android:dividerHeight="2dp">
        </ListView>

    </RelativeLayout>

</LinearLayout>